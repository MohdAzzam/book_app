<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Book</title>
    <link rel="stylesheet" href="/styles/showEjsTest.css">
</head>

<body>
    <header>
        <h1>Best Books!</h1>
        <button>Show</button>
    </header>
    <main>
        <div class="serach-head">
            <h3>Search Result</h3>
        </div>
        </div>
        <% searchResults.forEach( book=> { %>
            <div class="container">
                <img src="<%=book.img%>" alt="">
                <h5><%= book.title %></h5>
                <h6><%= book.author %></h6>
                <p><%= book.description %></p>
            </div>
        <% }) %>
    </main>
    <footer>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
    </footer>
</body>

</html>